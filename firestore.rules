rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /devices/{deviceId} {
      allow read: if false;
      allow create, update: if request.resource.data.deviceId == deviceId
        && request.resource.data.keys().hasOnly([
          "deviceId",
          "token",
          "petName",
          "userName",
          "state",
          "updatedAt",
          "tokenUpdatedAt"
        ]);
      allow delete: if false;
    }
  }
}
